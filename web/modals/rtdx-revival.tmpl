{{define "rtdx-revival.tmpl"}}
<div class="modal fade" id="rtdx-revive" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="rtdx-revive" aria-hidden="true">
  <div class="modal-dialog modal-dialog-scrollable" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="revivalModalTitle">Rescue Team DX Revival Password Generator</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>The password should be entered with two charcters per symbol. The first character being the number/letter on top, and the second being the first letter of the shape.</p>
        <p>F = Fire</p>
        <p>H = Heart</p>
        <p>W = Water</p>
        <p>E = Emerald</p>
        <p>S = Star</p>
        <p>For example: "1f xh pw 4e 8s"</p>
        <form action="rtdx-revival" method="get">
          <div class="form-group">
            <label for="rescuePassword">Rescue password:</label>
            <textarea type="text" class="form-control" id="rescuePassword" name="password" required></textarea>
          </div>
          <div class="form-group">
            <label for="team">Team name (that will "rescue" you):</label>
            <input type="text" class="form-control" name="team" maxlength="12" placeholder="PokÃ©pals" value="pmd-gen" required>
          </div>
          <div class="form-group" id="rtdx-revival-timestamp" style="display: none;">
            <label>Timestamp:</label>
            <input type="number" class="form-control" name="timestamp" required>
          </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Generate</button>
      </div>
      </form>
    </div>
  </div>
</div>
{{end}}
